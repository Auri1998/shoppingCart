<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/asd"
    android:clickable="true">
    <ImageView android:id="@+id/proImg"
        android:layout_width="100dp"
        android:layout_height="80dp"/>
    <TextView android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/proImg"
        android:text="qwewerwew"
        android:textSize="20sp"/>
    <TextView android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/proImg"
        android:textColor="@android:color/holo_red_dark"
        android:text="qwewerwew"
        android:textSize="15sp"/>
    <TextView android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/add_number"
        android:gravity="center"
        android:layout_below="@+id/price"
        android:text="ew"
        android:textSize="20sp"/>
    <Button android:id="@+id/add_number"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/number"
        android:layout_alignBaseline="@+id/number"/>
    <Button android:id="@+id/sub_number"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="15sp"
        android:layout_toLeftOf="@+id/number"
        android:layout_alignTop="@+id/number"
        android:layout_alignBaseline="@+id/number"/>
</RelativeLayout>
